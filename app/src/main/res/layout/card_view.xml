<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="BATHROOM TITLE" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/bathroom_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="East Bradbury Building, 1st Floor\nNear Starbucks"
                android:singleLine="false"
                />
                <TextView
                    android:id="@+id/bathroom_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textColor="#77000000"
                    android:text="1234 East Example St, Long Beach, CA, 90185"/>
            </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:layout_marginTop="5dp"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/card_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/one_star_90_15"
            android:paddingTop="2dp"
            android:paddingStart="5dp"/>
    </LinearLayout>
    <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="#dfdfdf" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/bathroom_accessible"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_accessibility_disabled_20"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/bathroom_free"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_free_disabled_20"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/bathroom_keyless"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_keyless_disabled_20"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/bathroom_parking"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_parking_disabled_20"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
            <LinearLayout
                android:id="@+id/card_star_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/card_star_padding"
                android:paddingEnd="@dimen/card_star_padding"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/main_card_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bookmark_disabled_20"
            android:layout_gravity="top|start"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:text="0.1mi"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            />
    </FrameLayout>

</android.support.v7.widget.CardView>