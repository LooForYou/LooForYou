<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_activity"
    tools:context="com.looforyou.looforyou.activities.MapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="com.loogoryou.looforyou.activities.MapActivity" >
        <TextView
            android:id="@+id/testText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="right|bottom"
            android:padding="15dp"
            android:text="test"
           android:layout_marginStart="15dp"
           android:layout_marginEnd="15dp"
            android:layout_marginBottom="75dp"
            android:background="@color/white"
            android:textAlignment="center"
            />
    </fragment>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_directions_layout"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="190dp"
            android:layout_marginEnd="15dp"
            android:alpha="0.9"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_toilet_directions_36"
                android:id="@+id/toilet_directions"
                android:background="@android:color/transparent"
                android:visibility="gone"
                />
        </FrameLayout>
    </FrameLayout>



    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottom_tabs" />
</RelativeLayout>

