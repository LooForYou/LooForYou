<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.looforyou.looforyou.activities.AddABathroomActivity">

    <!--margins do not work as a child of constraintLayout so scrollview needs to have actionbar-sized padding -->
    <ScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_weight="1"
        android:fillViewport="false">
        <!--relative layout used as wrapper to prevent scrollview from clipping linear layout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/default_padding">
            <!--linear layout used for stacking elements vertically-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/bathroom_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:src="@drawable/no_image_uploaded" >
                    <requestFocus/>
                </ImageView>

                <TextView
                    android:id="@+id/bathroom_image_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Claick to upload Image"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editBathroomName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bathroom Name"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editBathroomLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bathroom Location"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="2dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editBathroomInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bathroom Hours of Operation"
                        android:inputType="textLongMessage" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/bathroom_attributes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:text="Select Attributes:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bathroom_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/bathroomType"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkedButton="@id/radioNeutral">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female" />

                        <RadioButton
                            android:id="@+id/radioNeutral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender Neutral" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/bathroom_accessible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimaryLight"
                        android:textOn="Not Disabled"
                        android:textOff="Disabled" />

                    <ToggleButton
                        android:id="@+id/bathroom_free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimaryLight"
                        android:textOn="Not Free"
                        android:textOff="Free" />

                    <ToggleButton
                        android:id="@+id/bathroom_keyless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorPrimaryLight"
                        android:textOn="Locked"
                        android:textOff="Unlocked" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/bathroom_parking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2.5dp"
                        android:background="@color/colorPrimaryLight"
                        android:textOn="No Parking"
                        android:textOff="Parking" />

                    <ToggleButton
                        android:id="@+id/bathroom_mirrors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:background="@color/colorPrimaryLight"
                        android:textOn="No Mirrors"
                        android:textOff="Mirrors" />

                    <ToggleButton
                        android:id="@+id/bathroom_baby_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorPrimaryLight"
                        android:textOn="No Diaper Table"
                        android:textOff="Diaper Table" />
                </LinearLayout>

                <Button
                    android:id="@+id/submitBathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:text="SUBMIT" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></FrameLayout>
    <!--bottombar tabs-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:bb_tabXmlResource="@xml/bottom_tabs" />
    </RelativeLayout>
</FrameLayout>
